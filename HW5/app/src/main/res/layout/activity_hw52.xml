<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:stretchColumns="*"
    android:shrinkColumns="*"
    tools:context=".hw5_2">

    <TableRow>
        <EditText
            android:id="@+id/num1" />
    </TableRow>
    <TableRow>
        <EditText
            android:id="@+id/num2"/>
    </TableRow>
    <TableRow>
        <Button
            android:text="0"
            android:id="@+id/btn_0"/>
        <Button
            android:text="1"
            android:id="@+id/btn_1"/>
        <Button
            android:text="2"
            android:id="@+id/btn_2"/>
        <Button
            android:text="3"
            android:id="@+id/btn_3"/>
        <Button
            android:text="4"
            android:id="@+id/btn_4"/>
    </TableRow>
    <TableRow>
        <Button
            android:text="5"
            android:id="@+id/btn_5"/>
        <Button
            android:text="6"
            android:id="@+id/btn_6"/>
        <Button
            android:text="7"
            android:id="@+id/btn_7"/>
        <Button
            android:text="8"
            android:id="@+id/btn_8"/>
        <Button
            android:text="9"
            android:id="@+id/btn_9"/>

    </TableRow>
    <TextView
        android:text="2018038062 조민수"/>
    <TableRow>
        <Button
            android:layout_margin="10dp"
            android:id="@+id/add"
            android:text="더하기"
            android:layout_span="5"/>
    </TableRow>
    <TableRow>
        <Button
            android:layout_margin="10dp"
            android:id="@+id/minus"
            android:text="빼기"
            android:layout_span="5"/>
    </TableRow>
    <TableRow>
        <Button
            android:layout_margin="10dp"
            android:text="곱하기"
            android:id="@+id/mul"
            android:layout_span="5"/>
    </TableRow>
    <TableRow>
        <Button
            android:layout_margin="10dp"
            android:text="나누기"
            android:id="@+id/div"
            android:layout_span="5"/>
    </TableRow>
    <TableRow
        android:layout_margin="10dp">
        <TextView
            android:textSize="20dp"
            android:text="계산 결과: "
            android:textColor="#FF0000"
            android:layout_span="2"/>
        <TextView
            android:id="@+id/result"
            android:textSize="20dp"
            android:textColor="#FF0000"/>
    </TableRow>


</TableLayout>